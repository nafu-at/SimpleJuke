<configuration debug="false">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date{"yyyy-MM-dd HH:mm:ss.SS"}] [%-5level] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/SimpleJuke.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/SimpleJuke-%d{yyyyMMdd}.tar.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>[%date{"yyyy-MM-dd HH:mm:ss.SS"}] [%-5level] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="JDA" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/JDA.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/JDA-%d{yyyyMMdd}.tar.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>[%date{"yyyy-MM-dd HH:mm:ss.SS"}] [%-5level] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="HikariCP" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/HikariCP.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/HikariCP-%d{yyyyMMdd}.tar.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>[%date{"yyyy-MM-dd HH:mm:ss.SS"}] [%-5level] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG" additivity="true">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="net.dv8tion" level="DEBUG" additivity="true">
        <appender-ref ref="JDA"/>
    </logger>
    <logger name="com.zaxxer.hikari" level="DEBUG" additivity="true">
        <appender-ref ref="HikariCP"/>
    </logger>
</configuration>